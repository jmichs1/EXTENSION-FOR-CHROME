{
  "manifest_version": 3,
  "name": "Break Odds Engine",
  "version": "3.0.0",
  "description": "Real-time odds calculator for Whatnot random team/player breaks. Persistent collapsible overlay.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://www.whatnot.com/*", "https://whatnot.com/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.whatnot.com/*", "https://whatnot.com/*"],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
